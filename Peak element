class Solution
{
	// Function to find the peak element
	// arr[]: input array
	// n: size of array a[]
	public int peakElement(int[] arr,int n)
    {
        int max=Integer.MIN_VALUE;
        int c=0;
        for(int i=0;i<n;i++){
            if(max<arr[i]){
                max=arr[i];
                c=i;
            }
            
        }
        return c ;
    }
}
